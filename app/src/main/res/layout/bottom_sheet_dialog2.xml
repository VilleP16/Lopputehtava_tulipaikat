<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="377dp"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/idTVCourseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Lisää uusi tulipaikka"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/koordinaatit"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="250dp"
            android:layout_toEndOf="@+id/idTVCourseName"
            android:gravity="right"
            android:text="65.744145, 24.544069"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/nimiText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTVCourseName"
            android:paddingLeft="10dp"
            android:paddingTop="30dp"
            android:text="Nimi:" />

        <EditText
            android:id="@+id/nimiInput"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/nimiText"
            android:hint="Kirjoita paikan nimi"
            android:paddingLeft="10dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/kuvausText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nimiInput"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="Kuvaus:" />

        <EditText
            android:id="@+id/kuvausInput"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/kuvausText"
            android:hint="Kirjoita kuvaus"
            android:paddingLeft="10dp"
            android:textSize="12sp" />

        <Button
            android:id="@+id/kuvaBtn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/kuvausInput"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white"

            android:text="Lisää kuva"
            android:textColor="@color/black"
            android:textSize="10dp" />

        <CheckBox
            android:id="@+id/polttopuut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kuvausInput"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/kuvaBtn"
            android:gravity="top"
            android:paddingTop="5dp"
            android:text="Polttopuita" />

        <CheckBox
            android:id="@+id/vessa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kuvausInput"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/polttopuut"
            android:gravity="top"
            android:paddingTop="5dp"
            android:text="Vessa" />

        <Button
            android:id="@+id/tallennaBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vessa"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="55dp"
            android:text="Lisää"

            android:layout_toRightOf="@+id/kuvaBtn" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
